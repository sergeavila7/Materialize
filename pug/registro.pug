extend components/plantilla.pug
block content
        div(class="navbar-fixed")
        section(class="container")
            div(class="row registro-titulo")
                div(class="col s12")
                    h1(class="center-align") Regístrate en Platzi News
        main(class="container")
             div(class="row")
                div(class="col s12")
                    div(class="card-panel")
                        form(acton="")
                            div(class="row section")
                                div(class="input-field col s12 m6")
                                    input(id="first-name" type="text" class="validate")
                                    label(for="first-name") Nombre
                                div(class="input-field col s12 m6")
                                    input(id="last-name" type="text" class="validate")
                                    label(for="last-name") Apellido
                            div(class="row section")
                                div(class="input-field col s12 m6")
                                    input(id="email" type="email" class="validate")
                                    label(for="email") Email
                                div(class="input-field col s12 m6")
                                    input(id="password" type="password" class="validate")
                                    label(for="password") Contraseña
                            div(class="section")
                                h3(class="center-align") Te interesan noticias de:
                            div(class="section")
                                div(class="row")
                                    label(class="col s12 m4")
                                        input(type="checkbox")
                                        span Politica
                                    label(class="col s12 m4")
                                        input(type="checkbox")
                                        span Economía
                                    label(class="col s12 m4")
                                        input(type="checkbox")
                                        span Finanzas
                                div(class="row")
                                    label(class="col s12 m4")
                                        input(type="checkbox")
                                        span Entretenimiento
                                    label(class="col s12 m4")
                                        input(type="checkbox")
                                        span Tecnologia
                                    label(class="col s12 m4")
                                        input(type="checkbox")
                                        span Cultura
                            div(class="section")
                                div(class="row")
                                    div(class="col s12")
                                        button(class="btn waves-effect waves-light center-align rig") Enviar
                                            i(class="material-icons right") send

